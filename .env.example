# Vault AI - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# VAULT CONNECTION (Required)
# =============================================================================

# Vault server URL
VAULT_ADDR=https://vault.example.com:8200

# Skip TLS certificate verification (development only - NOT for production)
VAULT_SKIP_VERIFY=false

# Vault namespace (Enterprise only)
# VAULT_NAMESPACE=admin

# =============================================================================
# MCP PROXY CONFIGURATION
# =============================================================================

# MCP proxy internal port
MCP_PROXY_PORT=3001

# Logging level: debug, info, warn, error
MCP_LOG_LEVEL=info

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================

# Browser tab title
VITE_APP_TITLE=Vault AI

# Vault address for browser (may differ from server-side if using proxy)
VITE_VAULT_ADDR=https://vault.example.com:8200

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session idle timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# TLS CONFIGURATION (Optional - for container-level TLS termination)
# =============================================================================

# Path to TLS certificate
# TLS_CERT_PATH=/certs/server.crt

# Path to TLS private key
# TLS_KEY_PATH=/certs/server.key
